{
  "name": "cdkit.appstore.design",
  "version": "1.0.3",
  "description": "Create the screenshots assets for the App Store and Google Play with ImageMagick",
  "main": "src/cli.js",
  "scripts": {
    "start": "node src/cli",
    "test": "./node_modules/.bin/mocha --reporter spec",
    "test:coverage": "./node_modules/.bin/nyc npm test",
    "test:functional": "./node_modules/.bin/mocha --reporter spec ./test/functional",
    "test:all": "./node_modules/.bin/run-s test:functional test:coverage",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "bin": {
    "appstore-design": "./src/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/timoa/cdkit.appstore.design.git"
  },
  "author": "Damien Laureaux",
  "license": "MIT",
  "homepage": "https://cdkit.org",
  "dependencies": {
    "colors": "^1.3.3",
    "figures": "^2.0.0",
    "gm": "^1.23.1",
    "lodash": "^4.17.19",
    "snyk": "^1.316.1",
    "yargs": "^13.1.0"
  },
  "engines": {
    "node": ">=10.0"
  },
  "os": [
    "linux",
    "win32",
    "darwin"
  ],
  "devDependencies": {
    "acorn": "^6.4.1",
    "acorn-jsx": "^5.0.0",
    "chai": "^4.2.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "4.2.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "espree": "^4.1.0",
    "mocha": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 0,
    "statements": 0,
    "functions": 0,
    "branches": 0,
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "include": [
      "src/*.js",
      "src/**/*.js"
    ],
    "exclude": [
      "test/*.spec.js",
      "coverage/**"
    ],
    "all": true
  },
  "snyk": true
}
